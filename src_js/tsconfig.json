{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "mapRoot": "./",
        "rootDir": "./"
    },
    "exclude": ["node_modules"]
}
